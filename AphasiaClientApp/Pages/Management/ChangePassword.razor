@page "/ChangePassword"
@using Models.Enums
<div class="field-body" style="margin-top:50px; margin-bottom:60px;">
    <div class="card card-l border-0">
        <div class="text-card-title text-center">Zmień Hasło</div>
        <EditForm Model="@changePasswordModel" OnValidSubmit="ExecutePasswordChange"> 
            <DataAnnotationsValidator />
            <ValidationSummary />
              <div class="mb-3">
                <div class="form-group">
                    <div class="text-forms text-left-label">
                        <label for="OldPassword" class="form-label text-start"><b>Stare Hasło</b></label>
                    </div>
                    <div class="inputbox">
                        <i class="bi bi-person-fill"></i>
                        <InputText id="OldPassword" placeholder="Stare Hasło" @bind-Value="changePasswordModel.OldPassword" class="form-control" />
                    </div>
                </div>
              </div>
              <div class="mb-3">
                <div class="form-group">
                    <div class="text-forms text-left-label">
                        <label for="NewPassword" class="form-label text-start"><b>Nowe Hasło</b></label>
                    </div>
                    <div class="inputbox">
                        <i class="bi bi-person-fill"></i>
                        <InputText id="NewPassword" placeholder="Nowe Hasło" @bind-Value="changePasswordModel.Password" class="form-control" />
                    </div>
                </div>
                </div>
               <div class="mb-3">
                <div class="form-group">
                    <div class="text-forms text-left-label">
                        <label for="NewPasswordRepeat" class="form-label text-start"><b>Powtórz Nowe Hasło</b></label>
                    </div>
                    <div class="inputbox">
                        <i class="bi bi-person-fill"></i>
                        <InputText id="NewPasswordRepeat" placeholder="Powtórz Nowe Hasło" @bind-Value="changePasswordModel.PasswordRepeat" class="form-control" />
                    </div>
                </div>
             </div>
            <div class="positioner">
                <ButtonModel ButtonTypes="ButtonTypes.ButtonSmLDarkResponvie" ButtonCallback=ExecutePasswordChange EventType="ButtonEventType.Submit" Text="Zapisz"/>
            </div>
         </EditForm>
         </div>
     </div>
