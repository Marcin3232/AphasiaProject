@page "/management/{PatientId}/management_exercise/{AphasiaType}"
@using AphasiaClientApp.Models.Enums
@inject NavigationManager UriHelper
<style>
    .navbar-custom {
        margin-bottom: 30px !important;
    }
</style>

<div class="page">

    <div class="navi">
        <div class="text-center">
            <div class="row panel justify-content-center">
                <div class="col col-1">
                    <div class="text-center">
                    <ImageButtonModel Id="buttonSaveExcerciseHistory" TypeImage=NaviTypeImage.Save /></div>
                </div>
                <div class="col-sm-9">
                    <div class="text-center">
                    <ImageButtonModel TypeImage=NaviTypeImage.CheckCircle />
                    <ImageButtonModel TypeImage=NaviTypeImage.Refresh />
                    <ImageButtonModel ImageButtonType=ImageButtonTypes.ButtonFrame SetClickType="Check"  TypeImage=NaviTypeImage.CheckedBox />
                    <ImageButtonModel ImageButtonType=ImageButtonTypes.ButtonFrame SetClickType="Uncheck" TypeImage=NaviTypeImage.UncheckedBox />
                    <ImageButtonModel TypeImage=NaviTypeImage.ChartBar />
                    <ImageButtonModel ButtonCallback="RedirectMoto" id="Moto" TypeImage=NaviTypeImage.HeadMoto />
                    <ImageButtonModel ButtonCallback="RedirectSenso" Id="Senso" TypeImage=NaviTypeImage.HeadSenso />
                    <ImageButtonModel ButtonCallback="RedirectMix" Id="Mix" TypeImage=NaviTypeImage.HeadMix /></div>
                </div>
                <div class="col col-1" >
                    <div class="text-center">
                    <ImageButtonModel TypeImage=NaviTypeImage.Play /></div>
                </div>
            </div>
        </div>
    </div>
	<div class="container">		
		<div id="grid" class="row">
            <div id="gridFlex">
	<div id="gridDemo" class="col">

           @for (int i = 0; i < index; i++)
            {
                        string url = patientExerciseModel[i].ImageSrc + ".svg";
                        bool isActive = patientExerciseModel[i].IsActive;

                        if (isActive == true)
                        {
                            <ManagementCardExercise Style="background:#d3d3d3;" UserExId=patientExerciseModel[i].Id Disabled="@isActive.ToString()"  
                         Order="i+1" ExName="@patientExerciseModel[i].Name" ImageUrl="@url" Mark="1"/>
                        }
                        if (isActive == false)
                        {
                            <ManagementCardExercise Style="background:white;" UserExId=patientExerciseModel[i].Id Disabled="@isActive.ToString()"  
                         Order="i+1" ExName="@patientExerciseModel[i].Name" ImageUrl="@url" Mark="1"/>
                        }
                      
            }
			</div>
            </div>
		
		</div>
	</div>



</div>


