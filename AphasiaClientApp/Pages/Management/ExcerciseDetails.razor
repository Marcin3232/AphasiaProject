@page "/management/management_exercise/excerciseDetails/{Id}"
@using AphasiaClientApp.Models.Enums
@inject NavigationManager UriHelper

<div class="container">
    <div class="excercise-actions">
        <div class="center-block demo-content "><AphasiaClientApp.Components.Buttons.ButtonLgDarkMainPanelPatients Id="savePhases" Text="Zapisz"/></div>
        <div class="center-block demo-content "><AphasiaClientApp.Components.Buttons.ButtonLgDarkMainPanelPatients ButtonCallback="RedirectToExcercisePreview" Text="Podgląd Ćwiczenia"/></div>
        <div class="center-block demo-content "><AphasiaClientApp.Components.Buttons.ButtonLgDarkMainPanelPatients ButtonCallback="RedirectToResults" Text="Wyniki"/></div>
    </div>
    <div class="phase-buttons">

        @for (int i = 0; i < userExercisePhaseModels.Count; i++)
        {
            <AphasiaClientApp.Components.Buttons.SwitchButton PhaseName="@userExercisePhaseModels[i].Name" PhaseId="@userExercisePhaseModels[i].Id"
            IsActivated="@userExercisePhaseModels[i].IsActive.ToString()" Description="@userExercisePhaseModels[i].Description"/>
        }
   
    </div>

</div>
