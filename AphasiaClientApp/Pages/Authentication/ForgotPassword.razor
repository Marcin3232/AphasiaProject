@page "/forgot_password"
@using Microsoft.Extensions.Logging
@using Models.Enums


<div class="field-body" style="margin-top:50px; margin-bottom:60px;">
    <div class="card card-l border-0">
        <div class="text-card-title text-center">Resetowanie hasła</div>
        <EditForm Model="@exampleModel" OnValidSubmit="@HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="mb-3">
                <div class="form-group">
                    <div class="text-forms text-left-label">
                        <label for="loginId" class="form-label text-start"><b>E-mail</b></label>
                    </div>
                    <div class="inputbox">
                        <i class="bi bi-person-fill"></i>
                        <InputText id="name" type="mail" placeholder="Wpisz e-mail" @bind-Value="exampleModel.Name" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="positioner">
                <ButtonModel ButtonTypes="ButtonTypes.ButtonSmLDarkResponvie" EventType="ButtonEventType.Submit" Text="Zresetuj" />
            </div>
        </EditForm>

        <div class="text-center text-forms" style="margin-top:42px;">
            Masz już konto?
        </div>
        <div class="text-center text-forms text-underline" style="margin-bottom:23px;">
            <a class="link-text" href="/login">Zaloguj się</a>
        </div>
        <div class="text-center text-forms">
            Nie masz jeszcze konta?
        </div>
        <div class="text-center text-forms text-underline" style="margin-bottom:113px;">
            <a class="link-text" href="/register">Zarejestruj się</a>
        </div>
    </div>
</div>

@code {
    private ExampleModel exampleModel = new ExampleModel();

    private void HandleValidSubmit()
    {

        // Process the valid form
    }

    public class ExampleModel
    {
        public string Name { get; set; }
    }
}