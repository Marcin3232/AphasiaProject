@using AphasiaClientApp.Models.Enums
@inject IJSRuntime JsRuntime

@if (show)
{
    <div class="row justify-content-center margin-panel">
        <h3 class="exercise-title text-center" style="margin-bottom:10px;">
            @(IsPlayDesc() ? Model?.Desctiption : "")
        </h3>
        <img class="exerciseOneImg" src="@ModelList[Counter]?.Picture" />
        <p></p>
        <ImageButtonModel TypeImage=@NaviTypeImage.Sound
                      ButtonCallback=@OnPlaySound />

        @if (ShowFrameText())
        {
            <TextFrame Text="@Model?.Word"></TextFrame>
        }

        <audio id="sound" src="@Model?.WordSound" />
        <audio id="descSound" src=@Model?.DescriptionSound />
    </div>

}
