@using Models.Enums

@if (showDialog)
{
    <div class="modal fade show" id="myModal" style="display:block; background-color: rgba(10,10,10,.8);" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title" style="margin-top:70px;"><b>Czy na pewno chcesz zamknąć zestaw?</b></h4>
                </div>
                <div class="modal-body">
                    <div class="row justify-content-center">
                        <div class="col-8">
                            <div class="field-button" style="margin-top:58px;">
                                <ButtonModel Text="Tak, zamknij" ButtonTypes="ButtonTypes.ButtonLgDarkResponsive" ButtonCallback="ModalOk" />
                            </div>
                            <div class="field-button" style="margin-top:33px; margin-bottom:107px;">
                                <ButtonModel Text="Nie, wróć do ćwiczenia" ButtonTypes="ButtonTypes.ButtonLgLightResponsive" ButtonCallback="ModalCancel" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

